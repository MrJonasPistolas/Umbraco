@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;

    #region Getting System Language
    var language = Model.GetCultureFromDomains();
    var lang = language.Split('-')[0];
    #endregion
}

<!DOCTYPE html>
<html lang="@lang">
<head>
    @await Html.PartialAsync("~/Views/Partials/master/core/Metadata.cshtml")
    @await Html.PartialAsync("~/Views/Partials/master/core/Styles.cshtml")
</head>
<body>
    <div class="loader-bg">
        <div class="loader-bar"></div>
    </div>
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            @await Html.PartialAsync("~/Views/Partials/master/core/NavHeader.cshtml")
            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    @await Html.PartialAsync("~/Views/Partials/master/core/Navigation.cshtml")

                    <div class="pcoded-content">
                        <div class="page-header card">
                            <div class="row align-items-end">
                                <div class="col-lg-8">
                                    @await Html.PartialAsync("~/Views/Partials/master/core/PageHeaderTitle.cshtml")
                                </div>
                                <div class="col-lg-4">
                                    @await Html.PartialAsync("~/Views/Partials/master/core/PageHeaderBreadcrumb.cshtml")
                                </div>
                            </div>
                        </div>
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        @RenderBody()
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="styleSelector"></div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Partials/master/core/Scripts.cshtml")

    @await RenderSectionAsync("JavaScript", required: false)
</body>
</html>