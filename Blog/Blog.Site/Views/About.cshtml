@using Umbraco.Cms.Core.Security;
@using Umbraco.Cms.Core.Services;
@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.About>
@inject IUserService _userService;

@{
	var userCreator = _userService.GetUserById(Model.CreatorId);

	Layout = "Master.cshtml";
}

<div class="container">
	<div class="row">
		<div class="col-lg-8">
			<div class="main_blog_details">
				<img class="img-fluid" src="@Model.Image.Url()" alt="">
				<a href="javascript:;">
					<h4>@Model.Title</h4>
				</a>
				<div class="user_details">
					<div class="float-right">
						<div class="media">
							<div class="media-body">
								<h5>@Model.CreatorName()</h5>
								<p>@Model.CreateDate.ToString("dd MMM yyyy hh:mm tt")</p>
							</div>
							<div class="d-flex">
								<img src="/media/@userCreator.Avatar" alt="" width="40">
							</div>
						</div>
					</div>
				</div>
				@Model.BodyText
			</div>
		</div>
	</div>
</div>