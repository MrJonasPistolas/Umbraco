@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Core.Services;
@inject IMediaService _mediaService;

@{
    var type = Model.GetType();
    var banner = Model.Value<MediaWithCrops>("banner");
    var backgroundStyle = $"background: url({banner.Url()}) no-repeat scroll center left;"; ;
}

@if (type.Name.ToLower() == "homepage")
{
    <section class="home_banner_area" style="@backgroundStyle">
        <div class="container">
            <div class="row">
                <div class="col-lg-5"></div>
                <div class="col-lg-7">
                    @await Html.PartialAsync("~/Views/Partials/posts/BannerPosts.cshtml")
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="banner_area" style="@backgroundStyle">
        <div class="container">
            <div class="row banner_inner">
                <div class="col-lg-5"></div>
                <div class="col-lg-7">
                    <div class="banner_content text-center">
                        <h2>@(Model.Value<string>("title"))</h2>
                        @await Html.PartialAsync("~/Views/Partials/breadcrumb.cshtml")
                    </div>
                </div>
            </div>
        </div>
    </section>
}